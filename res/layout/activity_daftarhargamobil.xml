<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:orientation="vertical" >

    <AutoCompleteTextView
        android:id="@+id/autoSpesifikasiMobil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/TextView1"
        android:completionThreshold="1"
        android:ems="10"
        android:hint="Masukkan ID SpesifikasiMobil yang Anda Pilih" 
        android:textSize="11sp">

        <requestFocus />
    </AutoCompleteTextView>

    <TextView
        android:id="@+id/TextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/autoSpesifikasiMobil"
        android:layout_marginTop="10dp"
        android:text="Id HargaMobil" 
        android:textSize="12sp"/>

    <AutoCompleteTextView
        android:id="@+id/autoHargaMobil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/TextView2"
        android:completionThreshold="1"
        android:ems="10"
        android:hint="Masukkan ID HargaMobil yang Anda Pilih" 
        android:textSize="11sp"/>

    <Button
        android:id="@+id/addDaftarHargaMobil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/autoHargaMobil"
        android:text="Add (+)"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/TextView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/addDaftarHargaMobil"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:text="# Daftar List Harga Mobil :" 
        android:textSize="12sp"/>

    <ListView
        android:id="@+id/listDaftarHargaMobil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/TextView3"
        android:divider="@android:color/transparent"
        android:dividerHeight="3dp" >
    </ListView>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="# Membuat Daftar List Harga Dari ID SpesifikasiMobil dan ID HargaMobil :" 
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/TextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="18dp"
        android:text="Id SpesifikasiMobil :" 
        android:textSize="12sp"/>

</RelativeLayout>
